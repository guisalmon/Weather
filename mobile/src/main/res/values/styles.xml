<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/BlueActionBar</item>
        <item name="actionBarStyle">@style/BlueActionBar</item>
        <item name="colorPrimary">@color/base_blue</item>
        <item name="colorPrimaryDark">@color/base_blue_dark</item>
        <item name="colorAccent">@color/base_grey_accent</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:background" tools:ignore="NewApi">@color/base_blue</item>
        <item name="background">@color/base_blue</item>

    </style>

</resources>
